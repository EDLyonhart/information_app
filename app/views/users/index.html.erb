<div id="main-container" class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
    <h1>Users</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Messaging preferences</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="light-up"><%= user.name %></td>
            <td><%= user.email %></td>
            <td><% user.messaging_preferences.each do |message_type| %>
        <%= message_type[0].capitalize %> opt in: <%= message_type[1].to_s.capitalize %><br />
      <% end %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user, :email => user.email, 
                                                         :token => Token.where(:user_id => user.id)["id".to_i]
                                                  ) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <hr width= 90% />
  
  <div class="row">
    <div class="col-lg-12 centerer">
    <%= link_to 'New User', new_user_path, class: 'btn btn-info' %>
  </div>
</div>