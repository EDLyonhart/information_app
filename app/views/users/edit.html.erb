<div id="main-container" class="container">

  <h1>Editing User</h1>

  <div class="row">
    <%= render 'form', user: @user %>
  </div>

  <hr width= 90% />

  <div class="row">

    <div class="col-lg-3">    
      <%= link_to 'Show', @user, class: 'btn btn-info' %>
    </div>
    
    <div class="col-lg-3">    
      <%= link_to 'Back', users_path, class: 'btn btn-info' %>
    </div>

    <div class="col-lg-6">
      <%= link_to "Unsubscribe from all emails", unsubscribe_user_path(@user), :method => :put, class: 'btn btn-danger' %>
    </div>
  </div>
</div>

